@page "/addcompetition3/"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dodaj Zawodników</title>
    <style>
  body, html {
    height: 100%;
    margin: 0;
    font-family: Arial, sans-serif;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f4f4f4;
  }

  .dialog-container {
    width: 90%;
    max-width: 400px;
    background: white;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    border-radius: 10px;
    text-align: center;
  }

  .dialog-title {
    font-size: 18px;
    color: #333;
    margin-bottom: 20px;
  }

  .dialog-buttons {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 20px;
  }

  button {
    padding: 10px 20px;
    border: none;
    color: white;
    background-color: rgb(89, 117, 55);
    cursor: pointer;
    border-radius: 10px;
    transition: background-color 0.3s;
  }

  button:hover {
    background-color: #367c39;
  }

  button.negative {
    background-color: #f44336;
  }

  button.negative:hover {
    background-color: #d32f2f;
  }
</style>
</head>
<body>
<div class="dialog-container">
    <div class="dialog-title">Czy chcesz dodać zawodników do zawodów?</div>
    <div class="dialog-buttons">
        <button onclick="location.href='/AddArcherssCompitions'">TAK</button>
        <button class="negative" onclick="location.href='/addcompetition/end'">NIE</button>
    </div>
</div>
</body>
</html>